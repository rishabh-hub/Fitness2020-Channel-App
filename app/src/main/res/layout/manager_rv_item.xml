<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/manager_card_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/manager_rv_item_header"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="9dp"
            app:cardCornerRadius="20dp"
            android:id="@+id/manager_rv_item_cardvw"
            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/manager_rv_item_imgvw"
            />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/manager_rv_item_cardvw"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:textSize="15sp"
            android:fontFamily="@font/hind_bold"
            android:text="Ted Fox"
            android:id="@+id/manager_rv_item_name"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightGrey"
        android:layout_below="@id/manager_rv_item_header"
        android:layout_marginHorizontal="25dp"
        android:id="@+id/manager_rv_item_line"
        android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="9dp"
            android:layout_below="@id/manager_rv_item_line"
            >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Phone Number :"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/primaryBlue"
                android:id="@+id/manager_rv_item_phno_tv"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 8887751441"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/hind_regular"
                android:textColor="@color/fontGrey"
                android:id="@+id/manager_rv_item_phno"
                android:layout_toEndOf="@id/manager_rv_item_phno_tv"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/primaryBlue"
                android:id="@+id/manager_rv_item_email_tv"
                android:layout_below="@id/manager_rv_item_phno_tv"
                android:layout_marginTop="6dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tedfox@gmail.com"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/hind_regular"
                android:textColor="@color/fontGrey"
                android:id="@+id/manager_rv_item_email"
                android:layout_below="@id/manager_rv_item_phno_tv"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/manager_rv_item_email_tv"
                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>