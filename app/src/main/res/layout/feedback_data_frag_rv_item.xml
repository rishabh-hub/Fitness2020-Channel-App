<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/manager_card_bg"
    android:layout_marginBottom="8dp"
    android:id="@+id/data_frag_rv_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/data_frag_rv_item_header"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="15sp"
            android:textColor="@color/primaryBlue"
            android:text="Ted Foxx"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/data_frag_rv_item_name_tv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="3.0"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_bold"
            android:textSize="14sp"
            android:background="@drawable/rating_background"
            android:backgroundTint="@color/primaryBlue"
            android:paddingHorizontal="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:id="@+id/data_frag_rv_item_rating"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_frag_rv_item_header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:id="@+id/data_frag_rv_item_view_more"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View More"
            android:fontFamily="@font/ubuntu_regular"
            android:textSize="15sp"
            android:textColor="@color/primaryBlue"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="6dp"
            android:rotation="270"
            android:src="@drawable/ic_hollow_arrow"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>


</RelativeLayout>