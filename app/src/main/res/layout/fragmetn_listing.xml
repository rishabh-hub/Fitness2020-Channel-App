<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="4.5"
                android:layout_marginStart="15dp"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC Fitness Centre"
                android:textSize="17sp"
                android:textColor="#000"
                android:id="@+id/listing_name"
                android:layout_marginVertical="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai"
                android:textSize="12sp"
                android:id="@+id/listing_city"
                android:textColor="@color/darkgrey"
                android:layout_below="@id/listing_name"
                android:layout_marginVertical="1dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscription:"
                android:textSize="12sp"
                android:textColor="@color/darkgrey"
                android:id="@+id/listing_subscription"
                android:layout_below="@id/listing_city"
                android:layout_marginVertical="1dp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enabled"
                    android:textSize="12sp"
                    android:textColor="@color/primaryBlue"
                    android:id="@+id/listing_subscription_detail"
                    android:layout_below="@id/listing_city"
                    android:layout_toRightOf="@id/listing_subscription"
                    android:layout_marginStart="5dp"
                    android:layout_marginVertical="1dp"

                    />
            </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="15sp"
                    android:background="@drawable/rating_background"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/rating"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/darkBlue"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.8"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Details"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:weightSum="3"
            android:padding="5dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_pho_vid"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Photos and Videos"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/photos_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_photo_vid"
                        android:layout_margin="5dp"
                        android:id="@+id/photos_iv"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_managers"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Managers"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/managers_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_managers"
                        android:layout_margin="5dp"
                        android:id="@+id/managers_iv"

                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_information"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Information"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/information_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_information"
                        android:layout_margin="5dp"
                        android:id="@+id/information_iv"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:weightSum="3"
            android:padding="5dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_offerings"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Offerings"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/offerings_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_offerings"
                        android:layout_margin="5dp"
                        android:id="@+id/offerings_iv"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_act_fac"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Activites Facilities"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/act_fac_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_act_fac"
                        android:layout_margin="5dp"
                        android:id="@+id/act_fac_iv"

                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_vou_pro"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Vouchers and Promo Codes"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/voucher_pro_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_vouchers"
                        android:layout_margin="5dp"
                        android:id="@+id/voucher_pro_iv"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:weightSum="3"
            android:padding="5dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_reviews"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Reviews"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/reviews_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_reviews"
                        android:layout_margin="5dp"
                        android:id="@+id/reviews_iv"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                android:backgroundTint="@color/primaryBlue"
                android:id="@+id/cardvw_events"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Events"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_margin="5dp"
                        android:layout_above="@id/events_iv"
                        android:layout_alignParentTop="true"
                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_events"
                        android:layout_margin="5dp"
                        android:id="@+id/events_iv"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</ScrollView>