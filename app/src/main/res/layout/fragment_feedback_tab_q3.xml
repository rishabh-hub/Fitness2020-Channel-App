<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaints/ Suggestions (Optional)"
        android:fontFamily="@font/hind_bold"
        android:textSize="20dp"
        android:textColor="@color/fontGrey"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/feedback_frag_complaint_tv"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@drawable/manager_card_bg"
        android:layout_below="@+id/feedback_frag_complaint_tv"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="14dp"
        android:fontFamily="@font/ubuntu_regular"
        android:textSize="15sp"
        android:hint="Complaints and suggestions helps us to make your experiecnce with us better."
        android:textAlignment="textStart"
        android:gravity="start"
        android:padding="5dp"
        android:id="@+id/feedback_frag_complaint_et"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_bg"
        android:layout_below="@id/feedback_frag_complaint_et"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="BACK"
        android:textSize="19sp"
        android:fontFamily="@font/ubuntu_bold"
        android:paddingHorizontal="40dp"
        android:layout_marginStart="40dp"
        android:id="@+id/feedback_frag_complaint_back_btn"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_bg"
        android:layout_below="@id/feedback_frag_complaint_et"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:text="NEXT"
        android:textSize="19sp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginEnd="40dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/feedback_frag_complaint_next_btn"
        />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>